@model IEnumerable<RePOS.Models.Staff>

@{
    Layout = "_Layout";
    ViewData["Title"] = "RePOS - Staff";
    ViewData["PageName"] = "Staff";
}

@section HeaderRight {
    <div class="float-right">
        <div class="btn-group mr-1 mb-2">
            <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#add-staff"> Add Staff </button>
        </div>
    </div>
    @Html.Partial("~/Views/Setup/Staff/_Add.cshtml")
}


<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <!-- Makes table scrollable on small screens -->
                <table class="table table-bordered text-nowrap">
                    <thead class="table-dark text-center">
                        <!-- Dark header for better visibility -->
                        <tr>
                            <th>S/N</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Admin</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-start">
                        <!-- Loop through each category in the model and display it in a table row -->
                        @if (Model != null && Model.Any())
                        {
                            var counter = 1;
                            @foreach (var staff in Model)
                            {
                                <tr>
                                    <td class="text-center">@counter</td>
                                    <td class="text-center">@staff.FullName</td>
                                    <td class="text-center">@staff.Email</td>
                                    <td class="text-center">@staff.IsAdmin</td>
                                    <td class="text-center">@staff.Status</td>
                                    <td>
                                        <div class="text-center">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#edit-staff-@staff.Id">
                                                    <i class="fa fa-pencil"></i>
                                                </button>
                                                @Html.Partial("~/Views/Setup/Staff/_Edit.cshtml", staff)
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-center" colspan="9">
                                    <h5><i class="fa fa-hdd"></i> No Data!..</h5>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>